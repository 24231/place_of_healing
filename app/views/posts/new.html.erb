<% provide(:title, 'Post new') %>

<h1>新規投稿</h1>

<div class="new-post">

  <div class="form_containar">
      <%= form_with(model: @post, local: true) do |f| %>
        <%= f.label :place %>
        <%= f.text_field :place %>
 
       <div class="field">   
       <!--幅を大きくするためdiv使用-->
        <%= f.label :Impressions %>
        <%= f.text_area :content, placeholder: "銭湯についての感想" %>
       </div>
    
        <%= f.submit "投稿", class: "btn btn-primary" %>
        
      <% end %>
  </div>
  
  <div class="return-top">
    <%= link_to "トップ画面に戻る", root_url %>
  </div>
</div>
  