<% provide(:title, "My post" ) %>
  
<div class="mypost">
  
  <div class="mypost-top">
    <h1>マイポスト</h1>
  </div>
  
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% if @user.posts.any? %>
        <ol class="posts">
          <%= render partial: "posts/post", collection: @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>